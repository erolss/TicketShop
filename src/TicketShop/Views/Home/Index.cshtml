<div class="row">
    <div class="col-xs-8 col-xs-offset-2">
        <form asp-controller="shop" asp-action="find" id="search_form" method="post">
            <div class="input-group input-group-lg">
                <div class="input-group-btn search-panel">
                    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                        <span id="search_concept">Search for</span> <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" role="menu">
                        <li><a href="#event">Events</a></li>
                        <li><a href="#eventdate">Event Dates</a></li>
                        <li><a href="#venue">Venues</a></li>
                    </ul>
                </div>
                <input type="hidden" name="search_param" value="all" id="search_param">
                <input type="text" class="form-control" name="search_query" placeholder="Search term...">
                <span class="input-group-btn">
                    <button id="search_submit" class="btn btn-default" type="button"><span class="glyphicon glyphicon-search"></span></button>
                </span>
            </div>
        </form>
    </div>
</div>

<h2>Upcoming Event Dates</h2>
<hr />
<div class="row">
    @if (Model == null || Model.FullEventDates == null || Model.FullEventDates.Count() == 0)
    {
        <h3>No Event Dates Found</h3>
    }
    else
    {

        @foreach (var ed in Model.FullEventDates)
        {
            if (String.IsNullOrEmpty(ed.EventImagePath))
            {
                ed.EventImagePath = "Images/placeholder.png";

            }
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <img src="@(ViewData["ApiBaseUrl"] + ed.EventImagePath)" alt="@ed.EventName">
                    <div class="caption">
                        <h3>@ed.EventName</h3>
                        <p>@Html.Raw(ed.EventHtmlDescription)</p>
                        <p><a asp-area="" asp-controller="shop" asp-action="eventdate" asp-route-id="@ed.TicketEventDateID" class="btn btn-primary" role="button">Read more</a></p>
                    </div>
                </div>
            </div>
        }
    }
</div>



@section Scripts {
    <script>
        $(document).ready(function (e) {
            $('.search-panel .dropdown-menu').find('a').click(function (e) {
                e.preventDefault();
                var param = $(this).attr("href").replace("#", "");
                var concept = $(this).text();
                $('.search-panel span#search_concept').text(concept);
                $('.input-group #search_param').val(param);
            });
            $('#search_submit').click(function (e) {
                e.preventDefault();
                $('#search_form').submit();
            })
        });
    </script>
}