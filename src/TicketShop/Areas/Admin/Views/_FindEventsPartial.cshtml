@model TicketShop.Models.ViewModels.ShopFindViewModel



<div class="container">
    @if (Model.Events == null || Model.Events.Count() == 0)
    {
        <h3>The search generated no results.</h3>
    }
    else
    {
        @foreach (var ed in Model.Events)
        {
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <img src="@(ViewData["ApiBaseUrl"] + ed.EventImagePath)" alt="@ed.EventName">
                    <div class="caption">
                        <h3>@ed.EventName</h3>
                        <p>@Html.Raw(ed.EventHtmlDescription)</p>
                        <p><a asp-area="" asp-controller="Shop" asp-action="Event" asp-route-id="@ed.TicketEventID" class="btn btn-primary" role="button">Read more</a></p>
                    </div>
                </div>
            </div>
        }
    }
</div>



